<div class="loans-table">
  <table class="table table-striped ">
    <thead class="thead-default">
      <tr>
        <th>Loan Amount</th>
        <th>Monthly</th>
        <th>Interest rate</th>
        <th>Requested date</th>
        <th>Loan type</th>
        <th>Loan Schedule</th>
      </tr>
    </thead>
    <tbody>
      <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.loan_amount %></td>
        <td><%= loan.monthly %></td>
        <td><%= loan.interest_rate %></td>
        <td><%= loan.request_date %></td>
        <td><%= loan.amortization_type %></td>
        <td><%= link_to "Get Loan Schedule", calculate_amortization_schedule_loan_path(loan) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
